@using translord.Models
@using translord.Enums
@inject ITranslator Translator
@implements IDialogContentComponent<IGrouping<string, Translation>>

<FluentDialogBody>
    <p>
        @Content.Key
        Translations:
        @foreach (var lang in Translator.GetSupportedLanguages())
        {
            <FluentTextField @bind-Value="@Content.First(x => x.Language == lang).Value" Label="@lang.GetName()"></FluentTextField>
        }
    </p>
</FluentDialogBody>

@code {
    [Parameter]
    public IGrouping<string, Translation> Content { get; set; } = default!;
}